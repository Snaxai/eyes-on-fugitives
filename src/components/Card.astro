---
import dayjs from 'dayjs'
interface Props {
  title: string;
  body: string;
  href: string;
}

const {href, douchebag} = Astro.props;
---

<li class="link-card" transition:animate="slide">
  <a href={href}>
    <div style={{display: 'flex', flexDirection: 'row'}}>
      <div>
      <img src={douchebag.images?.[0]?.thumb} alt="Hello World og mugshots"/>
</div>
      <div style={{marginLeft: '16px'}}>
      <h2>
        {douchebag.title}
      </h2>
        <p>
          Age: {douchebag.dates_of_birth_used?.length > 0 ? dayjs().diff(dayjs(douchebag.dates_of_birth_used[0]), 'year') : 'Unknown'}
        </p>
      <p>
        Sex: {douchebag.sex ||'Unknown'}
      </p>
        <p>
          Hair: {douchebag.hair ||'Unknown'}
        </p>
        <p>
          Race: {douchebag.race_raw ||'Unknown'}
        </p>

    </div>
    </div>
  </a>
</li>
<style>
    .link-card {
        list-style: none;
        display: flex;
        padding: 1px;
        background-color: #23262d;
        background-image: none;
        background-size: 400%;
        border-radius: 7px;
        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    }

    .link-card > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: calc(1.5rem - 1px);
        border-radius: 8px;
        color: white;
        background-color: #23262d;
        opacity: 0.8;
    }

    h2 {
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }

    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
    }

    .link-card:is(:hover, :focus-within) {
        background-position: 0;
        background-image: var(--accent-gradient);
    }

    .link-card:is(:hover, :focus-within) h2 {
        color: rgb(var(--accent-light));
    }
</style>
